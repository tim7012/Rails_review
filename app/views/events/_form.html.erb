<% if @event.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <%end%>
  </ul>
<% end %>


<div class="form-group">
  <%= f.label :name, "Name" %>
